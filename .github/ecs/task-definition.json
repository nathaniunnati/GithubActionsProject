{
  "family": "node-fargate-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "amazon/amazon-ecs-sample",   // placeholder image
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::997753278599:role/ecsTaskExecutionRole"
}

